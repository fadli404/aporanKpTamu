<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/foto_data"
                android:layout_width="100dp"
                android:layout_height="100dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nama_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Wisuda Nur Fadli"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/tanggal_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Agustus 2020"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/keperluan_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Melakukan kerja praktek untuk jangka waktu 1 bulan"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>